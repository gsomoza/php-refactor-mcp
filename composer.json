{
    "name": "gsomoza/php-parser-mcp",
    "description": "A Model Context Protocol (MCP) server providing PHP refactoring tools powered by nikic/PHP-Parser",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Somoza",
            "email": "gabriel@somoza.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "php-mcp/server": "^3.0",
        "nikic/php-parser": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Somoza\\PhpParserMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Somoza\\PhpParserMcp\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/php-parser-mcp"
    ],
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
