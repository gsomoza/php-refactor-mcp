{
    "name": "somoza/php-refactor-mcp",
    "description": "A Model Context Protocol (MCP) server providing PHP refactoring tools powered by nikic/PHP-Parser",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Somoza",
            "email": "gabriel@somoza.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "league/flysystem": "^3.0",
        "nikic/php-parser": "^5.0",
        "php-mcp/server": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "infection/infection": "^0.29",
        "league/flysystem-memory": "^3.0",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Somoza\\PhpRefactorMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Somoza\\PhpRefactorMcp\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/php-refactor-mcp"
    ],
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": "parallel-lint src tests bin",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html=coverage --coverage-clover=coverage/clover.xml",
        "infection": "infection --threads=4 --min-msi=50 --min-covered-msi=70",
        "qa": [
            "@lint",
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "lint": "Check PHP files for syntax errors",
        "cs-check": "Check code style compliance",
        "cs-fix": "Fix code style violations",
        "phpstan": "Run static analysis",
        "test": "Run PHPUnit tests",
        "test:coverage": "Run PHPUnit tests with code coverage",
        "infection": "Run mutation testing",
        "qa": "Run all quality assurance checks"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
